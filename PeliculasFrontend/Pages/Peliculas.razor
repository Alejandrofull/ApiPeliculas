@page "/peliculas"
@using PeliculasFrontend.Models
@inject HttpClient Http
@inject IJSRuntime JsRuntime
@inject NavigationManager Navigation

<h3>🎬 Listado de Películas</h3>

<p>
    <a href="/peliculas/crear" class="btn btn-success">Crear Nueva Película</a>
</p>

@if (peliculas == null)
{
    <div class="alert alert-info"><em>Cargando películas...</em></div>
}
else if (!peliculas.Any())
{
    <div class="alert alert-warning">No hay películas registradas.</div>
}
else
{
    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Año</th>
                <th>Género</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in peliculas)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Titulo</td>
                    <td>@p.Año</td>
                    <td>@p.Genero</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary me-2" href="/peliculas/editar/@p.Id">
                            Editar
                        </a>
                        <button class="btn btn-sm btn-outline-danger"
                                @onclick="() => EliminarPelicula(p.Id)">
                            Eliminar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@code {
    private Pelicula[]? peliculas;

    protected override async Task OnInitializedAsync() => await CargarPeliculas();

    private async Task CargarPeliculas()
    {
        peliculas = await Http.GetFromJsonAsync<Pelicula[]>("api/Peliculas");
    }

    private async Task EliminarPelicula(int id)
    {
        bool confirmed = await JsRuntime.InvokeAsync<bool>("confirm",
            $"¿Eliminar película #{id}?");

        if (!confirmed) return;

        var response = await Http.DeleteAsync($"api/Peliculas/{id}");

        if (response.IsSuccessStatusCode)
        {
            await CargarPeliculas();
        }
    }
}
